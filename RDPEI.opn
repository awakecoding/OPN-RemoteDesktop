{
    EVENTID_SC_READY = 0x0001,
    EVENTID_CS_READY = 0x0002,
    EVENTID_TOUCH = 0x0003,
    EVENTID_SUSPEND_TOUCH = 0x0004,
    EVENTID_RESUME_TOUCH = 0x0005,
    EVENTID_DISMISS_HOVERING_CONTACT = 0x0006,
    ...
};

