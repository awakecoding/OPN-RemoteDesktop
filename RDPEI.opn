{
    POSITIVE_VAL = 0,
    NEGATIVE_VAL = 1
};

pattern FOUR_BYTE_SIGNED_INTEGER_S = enum byte
{
    POSITIVE_VAL = 0, 
    NEGATIVE_VAL = 1 
};

